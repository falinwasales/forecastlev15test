<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-name="SwitchOperatingUnitMenu">
    <li class="o_switch_company_menu">
        <a role="button" class="dropdown-toggle" data-toggle="dropdown" data-display="static" aria-expanded="false" href="#" aria-label="Dropdown menu" title="Dropdown menu">
            <span t-attf-class="#{widget.isMobile ? 'fa fa-building-o' : 'oe_topbar_name'}">
                <t t-if="!widget.isMobile"><t t-raw="widget.current_operating_unit_name"/></t>
            </span>
        </a>
        <div class="dropdown-menu dropdown-menu-right" role="menu">
            <t t-foreach="widget.user_operating_units" t-as="operating_unit">
                <div role="menuitem" class="dropdown-item d-flex py-0 px-0" data-menu="operating_unit" t-att-data-company-id="operating_unit[0]">
                    <div class="ml-auto pl-3 pr-3 border border-top-0 border-left-0 border-bottom-0 toggle_company o_py">
                        <span style="height: 2rem;">
                            <t t-if="widget.operating_unit_ids.includes(operating_unit[0])">
                                <i class="fa fa-fw fa-check-square pt-2"></i>
                            </t>
                            <t t-if="!widget.operating_unit_ids.includes(operating_unit[0])">
                                <i class="fa fa-fw fa-square-o pt-2"></i>
                            </t>
                        </span>
                    </div>
                    <div class="d-flex flex-grow-1 align-items-center py-0 log_into pl-3 o_py" t-att-style="operating_unit[0] === widget.current_operating_unit ? 'background-color: lightgrey;' : ''">
                        <t t-if="widget.operating_unit_ids.includes(operating_unit[0])">
                            <span class='mr-3 company_label'>
                                <t t-esc="operating_unit[1]"/>
                            </span>
                        </t>
                        <t t-if="!widget.operating_unit_ids.includes(operating_unit[0])">
                            <span class='mr-3 company_label text-muted'>
                                <t t-esc="operating_unit[1]"/>
                            </span>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </li>
</t>

</templates>
