                                                <t t-foreach='o.fal_sale_source_id_import' t-as='so'>
                                                    <span t-esc="so.create_uid.name"/>
                                                </t>
                                            </t>
                                            <t t-else=''>
                                                <span t-esc="o.create_uid.name"/>
