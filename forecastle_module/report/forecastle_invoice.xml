<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="forecastle_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t>
                    <div class="page">
                        <style>
                             html *{
                                font-family: Arial, Helvetica, sans-serif;
                            }

                            .do_title{
                                font-size:17pt;
                                margin-top:1.3cm;
                                text-align:right;
                                padding-right:24.3%;
                                margin-left:0.5cm;
                            }
                             .string_table{
                                padding-top:4px;
                                padding-bottom:4px;
                                text-align:left;
                                background-color:rgb(229,229,229);
                                vertical-align:middle;
                            }
                            .string_table2{
                                padding-top:4px;
                                padding-bottom:4px;
                                text-align:center;
                                background-color:rgb(229,229,229);
                                vertical-align:middle;
                            }
                            .string_table3{
                                padding-top:4px;
                                padding-bottom:4px;
                                text-align:right;
                                background-color:rgb(229,229,229);
                                vertical-align:middle;
                            }
                        </style>

                        <div class="do_title">
                            <p><b>INVOICE</b></p>
                        </div>

                        <t>
                            <div style="width:100%; margin-top;1%; margin-left:0.5cm; margin-right:0.5cm;">
                                <table style="width:63%; font-size:10pt; margin-top:1%;" align="left">
                                    <tr>
                                        <td><b>To : <span t-field="o.partner_id.name"/></b></td>
                                    </tr>
                                    <tr>
                                        <td> 
                                            <span t-field="o.partner_id.street"/>, <span t-field="o.partner_id.city"/> 
                                            <span t-field="o.partner_id.state_id"/> <span t-field="o.partner_id.zip"/>  
                                            <span t-field="o.partner_id.country_id"/>
                                        </td>
                                    </tr>
                                </table>

                                <table style="width:37%;font-size:10pt; margin-top:1%;" align="left">
                                    <tr>
                                        <td width="25%">Invoice No</td>
                                        <td>: <span style="color:red;" t-field="o.fal_sale_source_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td width="25%">Date</td>
                                        <td>: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d %b %Y')"/></td>
                                    </tr>
                                    <tr>
                                        <td width="25%">Credit Term</td>
                                        <td>: <span t-field="o.invoice_payment_term_id"/></td>
                                    </tr>
                                    <tr>
                                        <td width="25%">Issued By</td>
                                        <td>: 
                                            <t t-if='o.fal_sale_source_id_import'>
                                                <t t-foreach='o.fal_sale_source_id_import' t-as='so'>
                                                    <span t-esc="so.create_uid.name"/>
                                                </t>
                                            </t>
                                            <t t-else=''>
                                                <span t-esc="o.create_uid.name"/>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <div style="margin-left:0.5cm; margin-right:0.5cm;">
                                <table style="width:50%; border-collapse: collapse; text-align: justify; font-size:10pt; margin-top:4%; " align="left">
                                    <tr>
                                        <td width="1%"><b>Vessel/Voyage</b></td>
                                        <t t-if="o.fal_sale_source_id.is_import">
                                            <td style="width:27%">: <span t-field=" o.fal_sale_source_id.nama_sarana_angkut"/>/<span t-field="o.fal_sale_source_id.voyage_id.name"/></td>
                                        </t>
                                        <t t-if="not o.fal_sale_source_id.is_import">
                                            <td style="width:27%">: <span t-field=" o.fal_sale_source_id.re_vessel_id.vessel_full_name"/>/<span t-field="o.fal_sale_source_id.voyage_id"/></td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <td width="1%"><b>BL Number</b></td>
                                        <t t-if="o.fal_sale_source_id.is_import">
                                            <td style="width:27%">: <span t-field="o.fal_sale_source_id.name"/></td>
                                        </t>
                                        <t t-if="not o.fal_sale_source_id.is_import">
                                            <td style="width:27%">: <span t-field="o.fal_sale_source_id.bl_number"/></td>
                                        </t>
                                    </tr>
                                </table>
                                <table width="50%" style="text-align: justify; font-size:10pt; margin-top:4%;" align="left">
                                    <tr>
                                        <td width="2%"><b>Loading/Discharge</b></td>
                                        <t t-if="o.fal_sale_source_id.is_import">
                                            <td style="width:27%">: <span t-field="o.fal_sale_source_id.pelabuhan_asal"/> TO <span t-field="o.fal_sale_source_id.pelabuhan_akhir"/>  <span>VIA <span t-field="o.fal_sale_source_id.pelabuhan_akhir"/></span>
                                            </td>
                                        </t>
                                        <t t-if="not o.fal_sale_source_id.is_import">
                                            <td style="width:27%">: <span t-field="o.fal_sale_source_id.pol_id"/> TO <span t-field="o.fal_sale_source_id.pod_id"/>
                                                <t t-if='o.fal_sale_source_id.connecting_vessel_id'>
                                                    <t t-foreach='o.fal_sale_source_id.connecting_vessel_id.filtered(lambda x: x.port_type == "pot")' t-as='so'>
                                                        <t t-if='so'>
                                                            <span>VIA <span t-field="o.fal_sale_source_id.pelabuhan_akhir"/></span>
                                                        </t>
                                                    </t>
                                                </t>
                                            </td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <t t-if="o.fal_sale_source_id.is_import">
                                            <td width="2%"><b>ETA</b></td>
                                            <td style="width:27%">: <span t-esc="o.fal_sale_source_id.eta and o.fal_sale_source_id.eta.strftime('%d %b %Y')"/></td>
                                        </t>
                                        <t t-if="not o.fal_sale_source_id.is_import">
                                            <td width="2%"><b>ETD</b></td>
                                            <td style="width:27%">: 
                                                <t t-if='o.is_import'>
                                                    <span t-field="o.fal_sale_source_id.tgl_tiba"/>
                                                </t>
                                                <t t-if='not o.is_import'>
                                                    <span t-field="o.fal_sale_source_id.etd"/>
                                                </t>
                                            </td>
                                        </t>
                                    </tr>
                                </table>
                            </div>

                            <div style="margin-left:0.5cm; margin-right:0.5cm;">
                                <table style="width:100%; font-size:10pt; margin-top:2%;  border-top : 1px solid gray;">
                                    <tr>
                                        <th class="string_table" style="padding-left:3px;">Particulars</th>
                                        <th class="string_table2">Qty</th>
                                        <th class="string_table2">Cur</th>
                                        <th class="string_table2" width="15%;">Unit Price</th>
                                        <th class="string_table3" width="15%;">Total (IDR)</th>
                                        <th class="string_table3">PPN Amount</th>
                                        <th class="string_table3">Amount (Inc PPN)</th>
                                    </tr>

                                    <!-- Total tax and amount of invoice -->
                                    <t t-set="total_tax" t-value="0.0"/>
                                    <t t-set="total_amount" t-value="0.0"/>
                                    
                                    
                                    <!-- get forex price -->
                                    <t t-set="forex_price" t-value="0.0"/>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda x: x.product_id.is_gain_forex)" t-as='gn'>
                                        <t t-if='gn'>
                                            <t t-set="forex_price" t-value="gn.price_unit"/>
                                        </t>
                                    </t>
                                    <t t-set="forex_price_loss" t-value="0.0"/>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda x: x.product_id.is_loss_forex)" t-as='gn'>
                                        <t t-if='gn'>
                                            <t t-set="forex_price_loss" t-value="gn.price_unit"/>
                                        </t>
                                    </t>

                                    <t t-set="total_tax2" t-value="0.0"/>
                                    <t t-set="total_amount2" t-value="0.0"/>


                                    <t t-if="o.fal_invoice_mode == 'vendor_bill_c2c' or o.fal_invoice_mode == 'vendor_bill_feeder' or o.fal_invoice_mode == 'vb_repair'">
                                        <t t-foreach='o.invoice_line_ids' t-as='line'>
                                            <!-- PRODUCT NAME -->
                                            <td class="inv_border" style="text-align:left; padding-top:10px; padding-left:3px;">
                                                <t t-if="line.product_id.is_container"><span t-field="line.product_set_id.name"/></t>
                                                <t t-else=""><span t-field="line.product_id.name"/></t>
                                            </td>
                                            <!-- QTY -->
                                            <td class="inv_border" style="text-align:center; padding-top:10px;">
                                                <span t-esc="line.quantity"/>
                                            </td>
                                            <!-- currency -->
                                            <td class="inv_border" style="text-align:center; padding-top:10px;">
                                                <span t-if="line.product_id.is_container or line.product_id.is_dollar">
                                                    USD
                                                </span>
                                                <span t-else="">IDR</span>
                                            </td>
                                            <!-- Price Unit -->
                                            <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                <span t-esc="line.price_unit"/>
                                            </td>
                                            <!-- Total IDR-->
                                            <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                <span t-esc="line.fal_sale_price"/>
                                            </td>
                                            <!-- Total Tax-->
                                            <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                <span t-esc="line.fal_transaction_total"/>
                                            </td>
                                            <!-- TOTAL -->
                                            <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                <span t-esc="line.price_total"/>
                                            </td>
                                        </t>
                                    </t>    
                                    <t t-else="">
                                        <t t-foreach="o.compute_invoice_report_not_import()" t-as="line">
                                            <t t-if="line.display_type == 'line_section' or not line.product_id.is_loss_forex and not line.product_id.is_gain_forex">
                                                <tr>
                                                    <!-- get upsale price unit -->
                                                    <t t-set='upsale_price' t-value='0.0'/>
                                                    <t t-set='upsale_total' t-value='0.0'/>
                                                    <t t-foreach="o.invoice_line_ids.filtered(lambda x: x.product_id.is_upsale and x.product_set_id == line.product_set_id)" t-as='gn'>
                                                        <t t-if='gn'>
                                                            <t t-set="upsale_price" t-value="gn.price_unit"/>
                                                            <t t-set="upsale_total" t-value="gn.price_total"/>
                                                        </t>
                                                    </t>
                                                    <!-- get price_set of product_set -->
                                                    <t t-set="price_unit" t-value="0.0"/>
                                                    <t t-set="subtotal" t-value="0.0"/>
                                                    <t t-set="price_total" t-value="0.0"/>
                                                    <t t-foreach='o.invoice_line_ids.filtered(lambda a: a.product_id.is_dollar and a.product_set_id == line.product_set_id)' t-as='sale_line'>
                                                        <t t-set="price_unit" t-value="sale_line.price_unit"/>
                                                        <t t-set="subtotal" t-value="sale_line.price_subtotal"/>
                                                        <t t-set="price_total" t-value="sale_line.price_total"/>
                                                    </t>
                                                    <!-- Product Name -->
                                                    <td class="inv_border" style="text-align:left; padding-top:10px; padding-left:3px;">
                                                        <t t-if="line.product_id.is_container"><span t-field="line.product_set_id.name"/></t>
                                                        <t t-else=""><span t-field="line.product_id.name"/></t>
                                                    </td>
                                                    <!-- Quantity -->
                                                    <td class="inv_border" style="text-align:center; padding-top:10px;">
                                                        <span t-esc="line.quantity"/>
                                                    </td>
                                                    <!-- Currency -->
                                                    <td class="inv_border" style="text-align:center; padding-top:10px;">
                                                        <span t-if="line.product_id.is_container or line.product_id.is_dollar">
                                                            USD
                                                        </span>
                                                        <span t-else="">IDR</span>
                                                    </td>
                                                    <!-- Price Unit -->
                                                    <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                        <t t-if='o.is_import'>
                                                            <span t-if='line.product_id.is_container or line.product_id.is_dollar'>
                                                                <!-- <span t-if='line.product_id.is_container'>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                        <span t-esc="'{:,.2f}'.format(sale_line.total_by_product_set / line.quantity)"/>
                                                                    </t>
                                                                </span>
                                                                <span t-else=''>
                                                                    <t t-foreach='o.invoice_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                        <span t-esc="'{:,.2f}'.format(sale_line.fal_unit_price_usd)"/>
                                                                    </t>
                                                                </span> -->
                                                                <span t-esc="'{:,.2f}'.format(line.fal_sale_price)"/>
                                                            </span>
                                                            <span t-else="" t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                                        </t>
                                                        <t t-else=''>
                                                            <span t-if='line.product_id.is_container or line.product_id.is_dollar'>
                                                                <span t-if='line.product_id.is_container'>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")'
                                                                    t-as='sale_line'>
                                                                        <span t-esc="'{:,.2f}'.format(sale_line.total_by_product_set)"/>
                                                                    </t>
                                                                </span>
                                                                <span t-else=''>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.product_id.import_charge)' t-as='sale_line'>
                                                                        <span t-esc="'{:,.2f}'.format(sale_line.price_unit_principal_currency)"/>
                                                                    </t>
                                                                </span>
                                                            </span>
                                                            <span t-else="" t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                                        </t>
                                                    </td>
                                    
                                                    <!-- Total IDR-->
                                                    <t t-set="container_idr" t-value="0.0"/>
                                                    <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                        <!-- <span t-if="line.product_id.is_container or line.product_id.is_dollar">
                                                            <t t-if='not o.is_import'>
                                                                <t t-foreach='o.invoice_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                    <t t-if='upsale_total > 0.0'>
                                                                        <span t-esc="'{:,.2f}'.format((price_total) + (forex_price/o.count_is_upsale) + upsale_total)"/>
                                                                        <t t-set="container_idr" t-value="(price_total) + (forex_price/o.count_is_upsale) + upsale_total"/>
                                                                        <t t-set="total_amount" t-value="total_amount + container_idr"/>
                                                                    </t>
                                                                    <t t-else=''>
                                                                        <span t-esc="'{:,.2f}'.format((price_total) + (forex_price/o.count_is_dollar))"/>
                                                                        <t t-set="container_idr" t-value="(price_total) + (forex_price/o.count_is_dollar)"/>
                                                                        <t t-set="total_amount" t-value="total_amount + container_idr"/>
                                                                    </t>
                                                                </t>
                                                            </t>
                                                            <t t-if='o.is_import'>
                                                                <span t-esc="'{:,.2f}'.format(line.price_unit + (forex_price/o.count_is_dollar))"/>
                                                            </t>
                                                        </span>
    
                                                        <span t-if='not line.product_id.is_container and not line.product_id.is_dollar' 
                                                        t-esc="'{:,.2f}'.format(line.price_subtotal)"></span>
                                                        <span t-if='line.product_id.import_charge' t-esc="'{:,.2f}'.format(line.price_subtotal + (forex_price/o.count_is_dollar))"></span> -->
                                                        <t t-if='o.is_import'>
                                                            <span t-if='line.product_id.is_container or line.product_id.is_dollar'>
                                                                <!-- <span t-if='line.product_id.is_container'>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                        <span t-esc="'{:,.2f}'.format(sale_line.total_by_product_set / line.quantity)"/>
                                                                    </t>
                                                                </span>
                                                                <span t-else=''>
                                                                    <t t-foreach='o.invoice_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                        <span t-esc="'{:,.2f}'.format(sale_line.fal_unit_price_usd)"/>
                                                                    </t>
                                                                </span> -->
                                                                <span t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                                            </span>
                                                            <span t-else="" t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                                        </t>
                                                        <t t-else=''>
                                                            <span t-if='line.product_id.is_container or line.product_id.is_dollar'>
                                                                <span t-if='line.product_id.is_container'>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                        <t t-if='forex_price > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total) + (forex_price/o.count_is_upsale) + upsale_total)"/>
                                                                        </t>
                                                                        <t t-if='forex_price_loss > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total + upsale_total) - (forex_price_loss/o.count_is_upsale))"/>
                                                                        </t>
                                                                        <t t-if='forex_price == 0.0 and forex_price_loss == 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format(price_total + upsale_total)"/>
                                                                        </t>
                                                                    </t>
                                                                </span>
                                                                <span t-else=''>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.product_id.import_charge)' t-as='sale_line'>
                                                                        <t t-if='forex_price > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total) + (forex_price/o.count_is_dollar))"/>
                                                                        </t>
                                                                        <t t-if='forex_price_loss > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total) - (forex_price_loss/o.count_is_dollar))"/>
                                                                        </t>
                                                                        <t t-if='forex_price == 0.0 and forex_price_loss == 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format(price_total)"/>
                                                                        </t>
                                                                    </t>
                                                                </span>
                                                            </span>
                                                            <span t-else="" t-esc="'{:,.2f}'.format(line.price_unit)"/>
                                                        </t>
                                                    </td>
                                    
                                                    <!-- Tax -->
                                                    <t t-set="container_tax" t-value="0.0"/>
                                                    <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                        <span t-if='line.product_id.is_container  or line.product_id.is_dollar'>
                                                            <span t-if='not o.is_import'>
                                                                <t t-foreach='o.fal_sale_source_id.order_line.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                    <span t-esc='"{:,.2f}".format(sale_line.price_tax)'/>
                                                                    <t t-set="total_tax" t-value="total_tax + sale_line.price_tax"/>
                                                                    <t t-set="container_tax" t-value="sale_line.price_tax"/>
                                                                </t>
                                                            </span>
                                                            <span t-if='o.is_import'>
                                                                <t t-set="total_tax" t-value="total_tax + line.fal_transaction_total"/>
                                                                <span t-esc='"{:,.2f}".format(line.fal_transaction_total)'/>
                                                            </span>
                                                        </span>
                                                        <span t-else=''>
                                                            <t t-set="total_tax" t-value="total_tax + line.fal_transaction_total"/>
                                                            <span t-esc='"{:,.2f}".format(line.fal_transaction_total)'/>
                                                        </span>
                                                    </td>
                                    
                                                    <!-- Amount -->
                                                    <td class="inv_border" style="text-align:right; padding-top:10px;">
                                                        <t t-if='o.is_import'>
                                                            <span t-if='line.product_id.is_container or line.product_id.is_dollar'>
                                                                <span t-esc="'{:,.2f}'.format(line.price_total)"/>
                                                            </span>
                                                            <span t-else="" t-esc="'{:,.2f}'.format(line.price_total)"/>
                                                        </t>
                                                        <t t-else=''>
                                                            <span t-if='line.product_id.is_container or line.product_id.is_dollar'>
                                                                <span t-if='line.product_id.is_container'>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.display_type == "line_section")' t-as='sale_line'>
                                                                        <t t-if='forex_price > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total) + (forex_price/o.count_is_upsale) + upsale_total)"/>
                                                                        </t>
                                                                        <t t-if='forex_price_loss > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total + upsale_total) - (forex_price_loss/o.count_is_upsale))"/>
                                                                        </t>
                                                                        <t t-if='forex_price == 0.0 and forex_price_loss == 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format(price_total + upsale_total)"/>
                                                                        </t>
                                                                    </t>
                                                                </span>
                                                                <span t-else=''>
                                                                    <t t-foreach='o.invoice_line_ids.sale_line_ids.filtered(lambda a: a.product_set_id == line.product_set_id and a.product_id.import_charge)' t-as='sale_line'>
                                                                        <t t-if='forex_price > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total) + (forex_price/o.count_is_dollar))"/>
                                                                        </t>
                                                                        <t t-if='forex_price_loss > 0.0'>
                                                                            <span t-esc="'{:,.2f}'.format((price_total) + (forex_price_loss/o.count_is_dollar))"/>
                                                                        </t>
                                                                        <t t-if='forex_price == 0.0 and forex_price_loss == 0.0'>
